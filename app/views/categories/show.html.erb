<%= render 'layouts/leftcol' %>
	<div class="col-md-9">
		<%= will_paginate @deal %>
			
			<div class="btn-group pull-right">
      			<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
            		Sort by <span class="caret"></span>
        		</button>
          		<ul class="dropdown-menu" role="menu">
            		<li><%= link_to "Default", category_path(Category.find(@current_category))%></li>
            		<li><%= link_to "Date", category_path(Category.find(@current_category), sort: "0") %></li>
            		<li><%= link_to "Price High to Low", category_path(Category.find(@current_category), sort: "1") %></li>
            		<li><%= link_to "Price Low to High", category_path(Category.find(@current_category), sort: "2") %></li>
            	</ul>
        	</div>

			<%= render 'layouts/display' %>
		<%= will_paginate @deal %>
    </div>